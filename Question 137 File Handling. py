'''   Student Record Management System

 Real-World Use:

A school wants to:

Add student records

View all records

Search a student

Delete a student

Store data permanently in a file'''

def add_student():
    with open("student.txt", "a")  as f:
        name = input("enter name: ")
        rollnumber = input("enter roll number: ")
        marks = input("enter marks: ")
        f.write(f"{name},{rollnumber},{marks}\n")
    print("student data added ")   

def view_students():
    try:
        with open("students.txt","r") as f:
            print("\n--- student record---")
            print(f.read())
    except FileNotFoundError:
        print("no record found")

def search_student():
    rollnumber = input("enter roll number : ")
    found = False

    with open("student.txt", "r") as f:
        for line in f:
            if rollnumber in line:
                print("student found:",line)
                found = True
    if not found:
        print("student not found")            

def delete_student():
    rollnumber = input("enter roll number to delete: ")
    found =False

    with open("student.txt","r") as f:
        lines = f.readlines()

    with open("student.txt" , "w")  as f:
        for line in lines:
            if  rollnumber not in line:
                f.write(line)
            else:
                found = True
    if found:
        print("student deleted successfully")      
    else:
        print("student not found")   

while True:
    print("\n---- student Management System----")                   
    print("1. ADD student")
    print("2. View students")
    print("3. search student")
    print("4. delete student")
    print("5. Exit")

    choice = input("enter your choice: ")
    if choice == "1":
        add_student()
    elif choice == "2":
        view_students()  
    elif choice == "3" :
        search_student()  
    elif choice == "4" :
        delete_student()
    elif choice == "5" :
        print("Thank You")   
        break
    else:
        print("Invalid choice")
             